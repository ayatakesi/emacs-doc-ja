#: original_texis/windows.texi:4665 original_texis/windows.texi:5495
#, no-wrap
msgid "window position"
msgstr "window position"

#. type: cindex
#: original_texis/windows.texi:4666
#, no-wrap
msgid "window point"
msgstr "window point"

#. type: cindex
#: original_texis/windows.texi:4667
#, no-wrap
msgid "position in window"
msgstr "position in window"

