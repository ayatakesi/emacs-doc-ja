#, no-wrap
msgid ""
"(momentary-string-display\n"
"  \"**** Important Message! ****\"\n"
"  (point) ?\\r\n"
"  \"Type RET when done reading\")\n"
"@result{} t\n"
msgstr ""
"(momentary-string-display\n"
"  \"**** Important Message! ****\"\n"
"  (point) ?\\r\n"
"  \"Type RET when done reading\")\n"
"@result{} t\n"

#. type: group
#: original_texis/display.texi:1325
#, no-wrap
msgid ""
"---------- Buffer: foo ----------\n"
"This is the contents of foo.\n"
"**** Important Message! ****Second line.\n"
"---------- Buffer: foo ----------\n"
"\n"
msgstr ""
"---------- Buffer: foo ----------\n"
"This is the contents of foo.\n"
"**** Important Message! ****Second line.\n"
"---------- Buffer: foo ----------\n"
"\n"

