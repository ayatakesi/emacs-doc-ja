"        (suppress-keymap m)\n"
"        (define-key m \"i\" 'colorcomp-R-less)\n"
"        (define-key m \"o\" 'colorcomp-R-more)\n"
"        (define-key m \"k\" 'colorcomp-G-less)\n"
"        (define-key m \"l\" 'colorcomp-G-more)\n"
"        (define-key m \",\" 'colorcomp-B-less)\n"
