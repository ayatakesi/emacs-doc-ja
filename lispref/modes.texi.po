"(setq mode-line-format\n"
"  (list \"-\"\n"
"   'mode-line-mule-info\n"
"   'mode-line-modified\n"
"   'mode-line-frame-identification\n"
"   \"%b--\"\n"
msgstr ""
"(setq mode-line-format\n"
"  (list \"-\"\n"
"   'mode-line-mule-info\n"
"   'mode-line-modified\n"
