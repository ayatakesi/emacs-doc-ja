#: original_texis/windows.texi:93
#, no-wrap
msgid "live windows"
msgstr ""

#. type: Plain text
#: original_texis/windows.texi:96
msgid "A @dfn{live window} is one that is actually displaying a buffer in a frame."
msgstr ""

#. type: defun
#: original_texis/windows.texi:97
#, no-wrap
msgid "window-live-p object"
msgstr ""

