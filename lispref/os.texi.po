#: original_texis/os.texi:917
#, no-wrap
msgid "usg-unix-v"
msgstr "usg-unix-v"

#. type: table
#: original_texis/os.texi:919
msgid "AT&T Unix System V."
msgstr "AT&TのUnix System V。"

#. type: item
#: original_texis/os.texi:920
