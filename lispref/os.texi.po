msgid "deleted"
msgstr "deleted"

#. type: table
#: original_texis/os.texi:2600
msgid "@var{file} was deleted"
msgstr "@var{file}が削除された。"

#. type: item
#: original_texis/os.texi:2600
#, no-wrap
msgid "changed"
msgstr "changed"

#. type: table
#: original_texis/os.texi:2602
msgid "@var{file} has changed"
msgstr "@var{file}が変更された。"

#. type: item
#: original_texis/os.texi:2602
