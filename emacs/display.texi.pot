msgstr ""

#. type: findex
#: original_texis/display.texi:1275
#, no-wrap
msgid "highlight-phrase"
msgstr ""

#. type: cindex
#: original_texis/display.texi:1276
#, no-wrap
msgid "phrase, highlighting"
msgstr ""

#. type: cindex
#: original_texis/display.texi:1277
#, no-wrap
msgid "highlighting phrase"
msgstr ""

#. type: table
#: original_texis/display.texi:1282
msgid ""
"Highlight matches of @var{phrase}, using face @var{face} "
"(@code{highlight-phrase}).  @var{phrase} can be any regexp, but spaces will "
"be replaced by matches to whitespace and initial lower-case letters will "
"become case insensitive."
msgstr ""

#. type: kindex
#: original_texis/display.texi:1283 original_texis/display.texi:1285
#, no-wrap
msgid "M-s h ."
msgstr ""

#. type: kindex
#: original_texis/display.texi:1284 original_texis/display.texi:1286
#, no-wrap
msgid "C-x w ."
