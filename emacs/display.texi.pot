#: original_texis/display.texi:1563
#, no-wrap
msgid "lines"
msgstr ""

#. type: vindex
#: original_texis/display.texi:1564
#, no-wrap
msgid "whitespace-line-column"
msgstr ""

#. type: table
#: original_texis/display.texi:1567
msgid ""
"Highlight lines longer than 80 columns.  To change the column limit, "
"customize the variable @code{whitespace-line-column}."
msgstr ""

#. type: item
#: original_texis/display.texi:1568
#, no-wrap
msgid "newline"
msgstr ""

#. type: table
#: original_texis/display.texi:1570
msgid "Highlight newlines."
msgstr ""

#. type: item
#: original_texis/display.texi:1571
#, no-wrap
msgid "missing-newline-at-eof"
msgstr ""

#. type: table
#: original_texis/display.texi:1574
msgid ""
"Highlight the final character if the buffer doesn't end with a newline "
"character."
msgstr ""

#. type: item
