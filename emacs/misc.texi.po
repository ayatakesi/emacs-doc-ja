msgstr "encryption"

#. type: cindex
#: original_texis/misc.texi:291
#, no-wrap
msgid "SSL"
msgstr "SSL"

#. type: cindex
#: original_texis/misc.texi:292
#, no-wrap
msgid "TLS"
msgstr "TLS"

